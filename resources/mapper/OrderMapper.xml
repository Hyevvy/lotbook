<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="order">
	<resultMap type="order" id="orderMap">
		<result property="zipcode" column="zipcode" />
		<result property="createdAt" column="created_at" />
		<result property="vendorMessage" column="vendor_message" />
		<result property="streetAddress" column="street_address" />
		<result property="addressDetail" column="address_detail" />
		<result property="receiverName" column="receiver_name" />
		<result property="orderPhone" column="order_phone" />
		<result property="memberSequence" column="member_sequence" />
	</resultMap>

	<!-- id에 해당하는 주문 내역만 조회  -->
	<select id="select" parameterType="String" resultType="order">
		SELECT *
		FROM `ORDER` WHERE id=#{id}
	</select>

	<!-- 주문 내역 전체 조회 -->	
	<select id="selectall" resultType="order">
		SELECT * FROM `ORDER`
	</select>
	
	
	<!-- 주문 확정으로 인한 order state update -->
	<update id="update" parameterType="order">
		UPDATE `ORDER` SET ORDER_STATE = #{orderState} WHERE ORDER_KEY= #{orderKey}; 
	</update>
	
	<!-- 상품 구매 -->
	<insert id="insert" parameterType="order">
		INSERT INTO `ORDER`
		VALUES (0, #{streetAddr}, #{orderPhone}, #{memberKey})
	</insert>


</mapper>






